let msg = 'hello world'
// 2. Files import automatically: uncomment this
//msg = capitalize(msg)
class Node{
   
   constructor(valor){
      this.valor = valor
      this.next = null
   }

}

class LinkedList{

   constructor(){
     this.head = null
     this.length = 0

   }

   //inserir elemento
   inserir(elemento){
    var node = new Node(elemento)
    var atual
    //primeiro item da lista
    if(this.head == null){
       
       this.head = node

    }else{

        atual = this.head
        while(atual.next){
          atual = atual.next
        }
        atual.next = node
    }
    this.length++


   }

   removerDo(indice){
     
     if(indice > 0 && indice > this.length){

       return -1

     }else{

       var curr
       var previa
       var it = 0

       curr = this.head
       previa = curr

       if( indice === 0 ){
         this.head = curr.next
       }else{
         while(it < indice){
             it++
             previa = curr
             curr = curr.next
         }
         previa.next = curr.next
       }
       this.length--

       return curr.valor


     }



   }

}

let lista = new LinkedList()
console.log(lista)
lista.inserir(3)
console.log(lista)
lista.inserir(2)
lista.inserir(5)
lista.inserir(8)
console.log(lista)


console.log(lista.removerDo(0))
console.log(lista)
